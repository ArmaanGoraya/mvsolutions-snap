<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/home_image_view_img"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/home_text_view_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display Text"
        android:layout_below="@id/home_image_view_img"
        android:textSize="30dp"
        android:maxLines="5"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/button_capture_image_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture Image"
        android:textAllCaps="false"
        android:layout_above="@id/button_detect_text_btn"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:textSize="26dp"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/button_detect_text_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Detect Text"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="26dp"
        android:layout_margin="10dp"
        />
</RelativeLayout>