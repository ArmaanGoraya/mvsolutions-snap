<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/home_image_view_img"
        android:layout_width="match_parent"
        android:layout_height="321dp"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/home_text_view_txt"
        android:layout_width="407dp"
        android:layout_height="57dp"
        android:layout_below="@+id/home_image_view_img"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:maxLines="5"
        android:text="Display Text"
        android:textSize="30dp" />

    <Button
        android:id="@+id/detect_text_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="29dp"
        android:background="@color/colorPrimary"
        android:text="Detect Text"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="26dp" />

    <Button
        android:id="@+id/capture_image_btn"
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="165dp"
        android:background="@color/colorPrimary"
        android:text="Capture Image"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="26dp" />

    <Button
        android:id="@+id/pick_image_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detect_text_btn"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="13dp"
        android:background="@color/colorPrimary"
        android:text="Pick Photo"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="26dp" />
</RelativeLayout>